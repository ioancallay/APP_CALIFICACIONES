<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formMat4">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuestionario matematicas"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/lbl_mat4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué propiedad se utiliza cuando multiplicamos cualquier número por 1?  " />

        <CheckBox
            android:id="@+id/chk_mat41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propiedad de la identidad de la multiplicación " />

        <CheckBox
            android:id="@+id/chk_mat42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propiedad conmutativa de la multiplicación " />

        <CheckBox
            android:id="@+id/chk_mat43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Propiedad distributiva " />

        <Button
            android:id="@+id/btn_mat41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>