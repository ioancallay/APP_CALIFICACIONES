<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mat1">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Matemáticas"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cualés son las operaciones básicas conocidas?" />

        <CheckBox
            android:id="@+id/chk_num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suma" />

        <CheckBox
            android:id="@+id/chk_num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resta" />

        <CheckBox
            android:id="@+id/chk_num3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Multiplicación" />

        <CheckBox
            android:id="@+id/chk_num4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="División" />

        <CheckBox
            android:id="@+id/chk_num5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decimales" />

        <Button
            android:id="@+id/btn_preg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>